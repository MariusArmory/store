<article class="flex flex-col min-h-screen sm:justify-center items-center mt-10 sm:mt-0" id="new-customer">
  <div class="card bg-base-100 border border-neutral-foucus p-4 sm:p-10 w-full lg:max-w-xl sm:max-w-md overflow-hidden">

  <h1 class="font-semibold text-lg"><%= I18n.t('spree.new_customer') %></h1>

  <%= render 'shared/error_messages', target: resource %>

  <%= form_for resource, as: :spree_user, url: registration_path(resource), html: { class: "auth-form" } do |f| %>
      <div class="my-4">
        <%= f.label :email, "#{t("spree.email")}:", class: "mb-2"%>
        <%= f.email_field :email, placeholder: 'name@example.com', class: "input input-bordered w-full" %>
      </div>

      <div class="my-4">
        <%= f.label :password, "#{t("spree.password")}:", class: "mb-2" %>
        <%= f.password_field :password, placeholder: "p455w0rd", class: "input input-bordered w-full" %>
      </div>

      <div class="my-4">
        <%= f.label :password_confirmation, "#{t("spree.confirm_password")}:", class: "mb-2" %>
        <%= f.password_field :password_confirmation, placeholder: "p455w0rd", class: "input input-bordered w-full" %>
      </div>

    <div class="my-4">
      <%= f.button t("spree.create"), name: :commit, class: 'btn btn-primary btn-block' %>
    </div>

    <%= I18n.t("spree.or") %> <%= link_to I18n.t("spree.login_as_existing"), login_path, class: "link" %> 
  <% end %>
</article>
